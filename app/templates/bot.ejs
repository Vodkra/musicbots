<%- include('blocks/header', {bot, user, path}) %>
<script type="text/javascript" src="/public/scripts/botpage.js"></script>
<div class="container">
	<script src="/public/scripts/background-c.js" type="text/javascript"></script>
	<canvas id="bg" width="100" height="100" style="position: fixed"> </canvas>
	<div class="container">
		<h1 class="h1">Statistics</h1>
		<br />
		<div class="row justify-content-md-center">
			<div class="col-5 col-right">
				<i class="fa fa-fw fa-server" aria-hidden="true"></i> Server
			</div>
			<div class="col-5 col-left"><strong id="servers"><%= stats.servers %></strong></div>
		</div>
		<div class="row justify-content-md-center">
			<div class="col-5 col-right">
				<i class="fa fa-fw fa-clock-o" aria-hidden="true"></i> Uptime
			</div>
			<div class="col-5 col-left"><strong id="uptime"><%= stats.uptime %></strong></div>
		</div>
		<div class="row justify-content-md-center">
			<div class="col-5 col-right"><i class="fas fa-terminal"></i> Commands Today</div>
			<div class="col-5 col-left"><strong id="uptime"><%= stats.commandsToday %></strong></div>
		</div>
		<div class="row justify-content-md-center">
			<div class="col-5 col-right">
				<i class="fa fa-fw fa-users" aria-hidden="true"></i> Members
			</div>
			<div class="col-5 col-left"><strong><%= stats.members %></strong></div>
		</div>
		<div class="row justify-content-md-center">
			<div class="col-5 col-right"><i class="fa fa-fw fa-tasks" aria-hidden="true"></i> Memory</div>
			<div class="col-5 col-left"><strong id="memory"><%= stats.memoryUsage %> MB</strong></div>
		</div>
		<div class="row justify-content-md-center">
			<div class="col-5 col-right">
				<i class="fa fa-fw fa-hashtag" aria-hidden="true"></i> Text Channels
			</div>
			<div class="col-5 col-left"><strong><%= stats.text %></strong></div>
		</div>
		<div class="row justify-content-md-center">
			<div class="col-5 col-right">
				<i class="fa fa-fw fa-microphone" aria-hidden="true"></i> Voice Channels
			</div>
			<div class="col-5 col-left"><strong><%= stats.voice %></strong></div>
		</div>
		<div class="row justify-content-md-center">
			<div class="col-5 col-right">
				<i class="fa fa-fw fa-cogs" aria-hidden="true"></i> Discord.js Version
			</div>
			<div class="col-5 col-left"><strong><%= stats.dVersion %></strong></div>
		</div>
		<div class="row justify-content-md-center">
			<div class="col-5 col-right">
				<i class="fa fa-fw fa-cog" aria-hidden="true"></i> Node.js Version
			</div>
			<div class="col-5 col-left"><strong><%= stats.nVersion %></strong></div>
		</div>
	</div>
</div>
